# ========================================
# FUELFRIENDLY - PRODUCTION CONFIGURATION
# ========================================

# ----------------------------------------
# DATABASE CONFIGURATION (PostgreSQL)
# ----------------------------------------
# For local development, use a local PostgreSQL instance
# For production, use a cloud database (Neon, Supabase, etc.)
DATABASE_URL=postgresql://username:password@localhost:5432/fuelfriendly

# ----------------------------------------
# EMAIL SERVICE (SendGrid)
# ----------------------------------------
# Sign up at: https://sendgrid.com/
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@fuelfriendly.com

# ----------------------------------------
# STRIPE PAYMENT PROCESSING
# ----------------------------------------
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ----------------------------------------
# WHATSAPP BUSINESS API
# ----------------------------------------
# For production WhatsApp integration
WHATSAPP_API_URL=http://localhost:3001
WHATSAPP_API_KEY=your_whatsapp_api_key
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id

# ----------------------------------------
# SMS SERVICE (Twilio)
# ----------------------------------------
# Get from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ----------------------------------------
# MAPBOX (for maps)
# ----------------------------------------
# Get from: https://account.mapbox.com/access-tokens/
VITE_MAPBOX_ACCESS_TOKEN=pk.your_mapbox_token_here

# ----------------------------------------
# SERVER CONFIGURATION
# ----------------------------------------
PORT=3003
NODE_ENV=development

# ----------------------------------------
# FRONTEND CONFIGURATION
# ----------------------------------------
VITE_API_BASE_URL=https://apidecor.kelolahrd.life